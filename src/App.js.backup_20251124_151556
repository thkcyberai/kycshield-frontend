import React, { useState } from 'react';

function App() {
  const [videoFile, setVideoFile] = useState(null);
  const [documentFile, setDocumentFile] = useState(null);
  const [isAnalyzing, setIsAnalyzing] = useState(false);
  const [results, setResults] = useState(null);
  const [error, setError] = useState(null);

  const API_BASE = 'http://localhost:8000';

  const handleFileChange = (setter) => (e) => {
    const file = e.target.files[0];
    if (file) {
      setter(file);
    }
  };

  const analyzeVideo = async () => {
    if (!videoFile) {
      setError('Please select a video file');
      return;
    }
    setIsAnalyzing(true);
    setError(null);
    setResults(null);

    try {
      const loginRes = await fetch(API_BASE + '/api/v1/auth/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email: 'test@test.com', password: 'test123' })
      });
      const loginData = await loginRes.json();
      const token = loginData.access_token;

      const formData = new FormData();
      formData.append('video', videoFile);

      const res = await fetch(API_BASE + '/api/v1/video-deepfake/verify', {
        method: 'POST',
        headers: { 'Authorization': 'Bearer ' + token },
        body: formData
      });
      const data = await res.json();
      setResults({ type: 'video', data });
    } catch (err) {
      setError('Error: ' + err.message);
    } finally {
      setIsAnalyzing(false);
    }
  };

  const analyzeDocument = async () => {
    if (!documentFile) {
      setError('Please select a document image');
      return;
    }
    setIsAnalyzing(true);
    setError(null);
    setResults(null);

    try {
      const loginRes = await fetch(API_BASE + '/api/v1/auth/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email: 'test@test.com', password: 'test123' })
      });
      const loginData = await loginRes.json();
      const token = loginData.access_token;

      const formData = new FormData();
      formData.append('document', documentFile);

      const res = await fetch(API_BASE + '/api/v1/document/verify', {
        method: 'POST',
        headers: { 'Authorization': 'Bearer ' + token },
        body: formData
      });
      const data = await res.json();
      setResults({ type: 'document', data });
    } catch (err) {
      setError('Error: ' + err.message);
    } finally {
      setIsAnalyzing(false);
    }
  };

  const getVerdictColor = () => {
    if (!results) return '';
    const isGood = results.data.is_real || results.data.verdict === 'GENUINE' || results.data.verdict === 'REAL';
    return isGood ? 'green' : 'red';
  };

  return (
    <div style={{minHeight: '100vh', background: 'linear-gradient(135deg, #0a0a1a 0%, #1a1a2e 50%, #0a0a1a 100%)', color: 'white', fontFamily: 'Inter, sans-serif'}}>
      <header style={{borderBottom: '1px solid #333', padding: '20px 40px', display: 'flex', justifyContent: 'space-between', alignItems: 'center'}}>
        <div style={{display: 'flex', alignItems: 'center', gap: '12px'}}>
          <div style={{width: '40px', height: '40px', borderRadius: '10px', background: 'linear-gradient(to right, #06b6d4, #8b5cf6)', display: 'flex', alignItems: 'center', justifyContent: 'center', fontWeight: 'bold', fontSize: '20px'}}>K</div>
          <div>
            <h1 style={{margin: 0, fontSize: '24px', background: 'linear-gradient(to right, #22d3ee, #a855f7)', WebkitBackgroundClip: 'text', WebkitTextFillColor: 'transparent'}}>KYCShield</h1>
            <p style={{margin: 0, fontSize: '12px', color: '#666'}}>AI-Powered Fraud Detection</p>
          </div>
        </div>
        <div style={{display: 'flex', alignItems: 'center', gap: '8px'}}>
          <span style={{width: '8px', height: '8px', background: '#22c55e', borderRadius: '50%'}}></span>
          <span style={{color: '#888'}}>API Connected</span>
        </div>
      </header>

      <main style={{maxWidth: '1200px', margin: '0 auto', padding: '50px 20px'}}>
        <div style={{textAlign: 'center', marginBottom: '50px'}}>
          <h2 style={{fontSize: '42px', marginBottom: '16px'}}>
            Detect <span style={{color: '#22d3ee'}}>Deepfakes</span> & <span style={{color: '#a855f7'}}>Document Fraud</span>
          </h2>
          <p style={{color: '#888', fontSize: '18px'}}>Enterprise-grade AI detection for synthetic identity attacks</p>
        </div>

        <div style={{display: 'grid', gridTemplateColumns: 'repeat(auto-fit, minmax(400px, 1fr))', gap: '30px', marginBottom: '40px'}}>
          <div style={{background: 'rgba(30,30,50,0.5)', border: '1px solid #333', borderRadius: '20px', padding: '30px'}}>
            <div style={{display: 'flex', alignItems: 'center', gap: '15px', marginBottom: '25px'}}>
              <div style={{width: '50px', height: '50px', borderRadius: '12px', background: 'rgba(6, 182, 212, 0.2)', display: 'flex', alignItems: 'center', justifyContent: 'center', color: '#22d3ee', fontSize: '24px'}}>üé¨</div>
              <div>
                <h3 style={{margin: 0, fontSize: '20px'}}>Video Deepfake Detection</h3>
                <p style={{margin: 0, color: '#666', fontSize: '14px'}}>99.90% Accuracy</p>
              </div>
            </div>
            <div style={{border: '2px dashed #444', borderRadius: '15px', padding: '40px', textAlign: 'center', marginBottom: '20px', cursor: 'pointer'}}>
              <input type="file" accept="video/*" onChange={handleFileChange(setVideoFile)} style={{display: 'none'}} id="video-upload" />
              <label htmlFor="video-upload" style={{cursor: 'pointer'}}>
                <div style={{fontSize: '40px', marginBottom: '10px'}}>üì§</div>
                {videoFile ? <p style={{color: '#22d3ee', fontWeight: '500'}}>{videoFile.name}</p> : <p style={{color: '#666'}}>Drop video or click to upload</p>}
              </label>
            </div>
            <button onClick={analyzeVideo} disabled={!videoFile || isAnalyzing} style={{width: '100%', padding: '15px', background: videoFile && !isAnalyzing ? 'linear-gradient(to right, #06b6d4, #0891b2)' : '#444', border: 'none', borderRadius: '12px', color: 'white', fontSize: '16px', fontWeight: '600', cursor: videoFile && !isAnalyzing ? 'pointer' : 'not-allowed'}}>
              {isAnalyzing ? 'Analyzing...' : 'Analyze Video'}
            </button>
          </div>

          <div style={{background: 'rgba(30,30,50,0.5)', border: '1px solid #333', borderRadius: '20px', padding: '30px'}}>
            <div style={{display: 'flex', alignItems: 'center', gap: '15px', marginBottom: '25px'}}>
              <div style={{width: '50px', height: '50px', borderRadius: '12px', background: 'rgba(139, 92, 246, 0.2)', display: 'flex', alignItems: 'center', justifyContent: 'center', color: '#a855f7', fontSize: '24px'}}>üìÑ</div>
              <div>
                <h3 style={{margin: 0, fontSize: '20px'}}>Document Fraud Detection</h3>
                <p style={{margin: 0, color: '#666', fontSize: '14px'}}>100% Accuracy</p>
              </div>
            </div>
            <div style={{border: '2px dashed #444', borderRadius: '15px', padding: '40px', textAlign: 'center', marginBottom: '20px', cursor: 'pointer'}}>
              <input type="file" accept="image/*" onChange={handleFileChange(setDocumentFile)} style={{display: 'none'}} id="doc-upload" />
              <label htmlFor="doc-upload" style={{cursor: 'pointer'}}>
                <div style={{fontSize: '40px', marginBottom: '10px'}}>üì§</div>
                {documentFile ? <p style={{color: '#a855f7', fontWeight: '500'}}>{documentFile.name}</p> : <p style={{color: '#666'}}>Drop ID document or click to upload</p>}
              </label>
            </div>
            <button onClick={analyzeDocument} disabled={!documentFile || isAnalyzing} style={{width: '100%', padding: '15px', background: documentFile && !isAnalyzing ? 'linear-gradient(to right, #8b5cf6, #7c3aed)' : '#444', border: 'none', borderRadius: '12px', color: 'white', fontSize: '16px', fontWeight: '600', cursor: documentFile && !isAnalyzing ? 'pointer' : 'not-allowed'}}>
              {isAnalyzing ? 'Analyzing...' : 'Analyze Document'}
            </button>
          </div>
        </div>

        {error && (
          <div style={{marginBottom: '30px', padding: '20px', background: 'rgba(239, 68, 68, 0.2)', border: '1px solid rgba(239, 68, 68, 0.5)', borderRadius: '15px', textAlign: 'center', color: '#f87171'}}>{error}</div>
        )}

        {results && (
          <div style={{padding: '40px', borderRadius: '20px', border: '1px solid', borderColor: getVerdictColor() === 'green' ? 'rgba(34, 197, 94, 0.5)' : 'rgba(239, 68, 68, 0.5)', background: getVerdictColor() === 'green' ? 'rgba(34, 197, 94, 0.1)' : 'rgba(239, 68, 68, 0.1)'}}>
            <div style={{textAlign: 'center', marginBottom: '30px'}}>
              <div style={{display: 'inline-flex', alignItems: 'center', gap: '10px', padding: '15px 30px', borderRadius: '50px', fontSize: '28px', fontWeight: 'bold', background: getVerdictColor() === 'green' ? 'rgba(34, 197, 94, 0.2)' : 'rgba(239, 68, 68, 0.2)', color: getVerdictColor() === 'green' ? '#4ade80' : '#f87171'}}>
                {getVerdictColor() === 'green' ? '‚úÖ' : '‚ö†Ô∏è'} {results.data.verdict || (results.data.is_real ? 'REAL' : 'FAKE')}
              </div>
            </div>
            <div style={{display: 'grid', gridTemplateColumns: 'repeat(3, 1fr)', gap: '20px'}}>
              <div style={{background: 'rgba(0,0,0,0.3)', borderRadius: '15px', padding: '20px', textAlign: 'center'}}>
                <p style={{color: '#888', fontSize: '14px', marginBottom: '5px'}}>Confidence</p>
                <p style={{fontSize: '32px', fontWeight: 'bold', margin: 0}}>{((results.data.confidence || 0) * 100).toFixed(1)}%</p>
              </div>
              <div style={{background: 'rgba(0,0,0,0.3)', borderRadius: '15px', padding: '20px', textAlign: 'center'}}>
                <p style={{color: '#888', fontSize: '14px', marginBottom: '5px'}}>Analysis Type</p>
                <p style={{fontSize: '20px', fontWeight: '600', margin: 0}}>{results.type === 'video' ? 'Video Deepfake' : 'Document Fraud'}</p>
              </div>
              <div style={{background: 'rgba(0,0,0,0.3)', borderRadius: '15px', padding: '20px', textAlign: 'center'}}>
                <p style={{color: '#888', fontSize: '14px', marginBottom: '5px'}}>Processing</p>
                <p style={{fontSize: '20px', fontWeight: '600', margin: 0}}>{results.data.frames_analyzed ? results.data.frames_analyzed + ' frames' : 'Instant'}</p>
              </div>
            </div>
          </div>
        )}

        <div style={{marginTop: '80px', display: 'grid', gridTemplateColumns: 'repeat(4, 1fr)', gap: '30px', textAlign: 'center'}}>
          <div><p style={{fontSize: '42px', fontWeight: 'bold', color: '#22d3ee', margin: 0}}>99.90%</p><p style={{color: '#888'}}>Video Detection</p></div>
          <div><p style={{fontSize: '42px', fontWeight: 'bold', color: '#a855f7', margin: 0}}>100%</p><p style={{color: '#888'}}>Document Detection</p></div>
          <div><p style={{fontSize: '42px', fontWeight: 'bold', color: '#4ade80', margin: 0}}>&lt;1s</p><p style={{color: '#888'}}>Processing Time</p></div>
          <div><p style={{fontSize: '42px', fontWeight: 'bold', color: '#facc15', margin: 0}}>5+</p><p style={{color: '#888'}}>Attack Types</p></div>
        </div>
      </main>

      <footer style={{borderTop: '1px solid #333', marginTop: '80px', padding: '30px', textAlign: 'center', color: '#666'}}>
        <p>¬© 2025 KYCShield by Trusi.ai | Protecting against synthetic identity fraud</p>
      </footer>
    </div>
  );
}

export default App;
