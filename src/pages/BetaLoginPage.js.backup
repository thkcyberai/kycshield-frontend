import React, { useState } from 'react';
import { useNavigate } from 'react-router-dom';

function BetaLoginPage() {
  const [accessCode, setAccessCode] = useState('');
  const [isLoading, setIsLoading] = useState(false);
  const [error, setError] = useState('');
  const [betaInfo, setBetaInfo] = useState(null);
  const navigate = useNavigate();

  const API_BASE = 'https://api.kycshield.ai';

  const formatAccessCode = (value) => {
    // Remove all non-alphanumeric characters and convert to uppercase
    const clean = value.replace(/[^a-zA-Z0-9]/g, '').toUpperCase();
    
    // Format as BETA-XXXX-XXXX
    if (clean.length <= 4) {
      return clean;
    } else if (clean.length <= 8) {
      return `${clean.slice(0, 4)}-${clean.slice(4)}`;
    } else {
      return `${clean.slice(0, 4)}-${clean.slice(4, 8)}-${clean.slice(8, 12)}`;
    }
  };

  const handleCodeChange = (e) => {
    const formatted = formatAccessCode(e.target.value);
    if (formatted.length <= 14) { // BETA-XXXX-XXXX = 14 chars
      setAccessCode(formatted);
    }
  };

  const handleLogin = async (e) => {
    e.preventDefault();
    setIsLoading(true);
    setError('');

    // Add BETA- prefix if not present
    let code = accessCode.trim().toUpperCase();
    if (!code.startsWith('BETA-')) {
      code = 'BETA-' + code;
    }

    try {
      const res = await fetch(API_BASE + '/api/v1/beta/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ access_code: code })
      });

      const data = await res.json();

      if (!res.ok) {
        throw new Error(data.detail || 'Invalid access code');
      }

      // Store token and beta info
      localStorage.setItem('kycshield_token', data.access_token);
      localStorage.setItem('kycshield_beta', JSON.stringify(data.beta_info));
      localStorage.setItem('kycshield_access_code', code);
      
      setBetaInfo(data.beta_info);
      
      // Navigate to dashboard after short delay to show success
      setTimeout(() => {
        navigate('/dashboard');
      }, 1500);

    } catch (err) {
      setError(err.message || 'Login failed');
    } finally {
      setIsLoading(false);
    }
  };

  return (
    <div style={{
      minHeight: '100vh',
      background: 'linear-gradient(180deg, #0a0f1e 0%, #1a1f3a 50%, #0a0f1e 100%)',
      display: 'flex',
      alignItems: 'center',
      justifyContent: 'center',
      fontFamily: '-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif',
      padding: '40px 20px'
    }}>
      <div style={{width: '100%', maxWidth: '480px'}}>

        {/* Logo & Branding */}
        <div style={{textAlign: 'center', marginBottom: '48px'}}>
          <div style={{
            display: 'inline-flex',
            alignItems: 'center',
            justifyContent: 'center',
            gap: '16px',
            marginBottom: '24px'
          }}>
            <div style={{
              width: '64px',
              height: '64px',
              borderRadius: '16px',
              background: 'linear-gradient(135deg, #10b981 0%, #3b82f6 100%)',
              display: 'flex',
              alignItems: 'center',
              justifyContent: 'center',
              fontSize: '32px',
              fontWeight: '700',
              color: 'white',
              boxShadow: '0 8px 24px rgba(16, 185, 129, 0.4)'
            }}>K</div>
          </div>
          <h1 style={{
            margin: '0 0 12px 0',
            fontSize: '36px',
            fontWeight: '700',
            background: 'linear-gradient(135deg, #34d399 0%, #60a5fa 100%)',
            WebkitBackgroundClip: 'text',
            WebkitTextFillColor: 'transparent',
            letterSpacing: '-0.5px'
          }}>KYCShield</h1>
          <div style={{
            display: 'inline-block',
            background: 'linear-gradient(135deg, #10b981 0%, #3b82f6 100%)',
            padding: '6px 16px',
            borderRadius: '20px',
            marginTop: '8px'
          }}>
            <span style={{
              color: 'white',
              fontSize: '14px',
              fontWeight: '600',
              letterSpacing: '0.5px'
            }}>EARLY ACCESS BETA</span>
          </div>
        </div>

        {/* Welcome Banner */}
        <div style={{
          background: 'rgba(16, 185, 129, 0.08)',
          border: '1px solid rgba(16, 185, 129, 0.2)',
          borderRadius: '16px',
          padding: '20px 24px',
          marginBottom: '32px',
          textAlign: 'center'
        }}>
          <div style={{
            color: '#6ee7b7',
            fontSize: '15px',
            lineHeight: '1.6',
            fontWeight: '500'
          }}>
            Welcome to the <strong style={{color: '#34d399'}}>Early Access Beta</strong> program.
            <br/>
            Enter your access code to begin testing our AI verification platform.
          </div>
        </div>

        {/* Login Card */}
        <div style={{
          background: 'rgba(30, 41, 59, 0.5)',
          backdropFilter: 'blur(20px)',
          border: '1px solid rgba(148, 163, 184, 0.1)',
          borderRadius: '24px',
          padding: '48px',
          boxShadow: '0 20px 60px rgba(0, 0, 0, 0.3)'
        }}>
          
          {betaInfo ? (
            // Success state
            <div style={{textAlign: 'center'}}>
              <div style={{
                width: '80px',
                height: '80px',
                borderRadius: '50%',
                background: 'linear-gradient(135deg, #10b981 0%, #34d399 100%)',
                display: 'flex',
                alignItems: 'center',
                justifyContent: 'center',
                margin: '0 auto 24px',
                fontSize: '40px'
              }}>âœ“</div>
              <h2 style={{
                color: '#34d399',
                margin: '0 0 16px 0',
                fontSize: '24px',
                fontWeight: '600'
              }}>Access Granted!</h2>
              <p style={{
                color: '#94a3b8',
                fontSize: '15px',
                margin: '0 0 24px 0'
              }}>
                Your beta access expires in <strong style={{color: '#60a5fa'}}>{betaInfo.days_remaining} days</strong>
              </p>
              <p style={{
                color: '#64748b',
                fontSize: '14px',
                margin: 0
              }}>Redirecting to dashboard...</p>
            </div>
          ) : (
            // Login form
            <>
              <h2 style={{
                color: 'white',
                margin: '0 0 32px 0',
                fontSize: '24px',
                fontWeight: '600',
                letterSpacing: '-0.3px',
                textAlign: 'center'
              }}>Enter Your Access Code</h2>

              {error && (
                <div style={{
                  background: 'rgba(239, 68, 68, 0.1)',
                  border: '1px solid rgba(239, 68, 68, 0.3)',
                  borderRadius: '12px',
                  padding: '14px 18px',
                  marginBottom: '24px',
                  color: '#fca5a5',
                  fontSize: '14px',
                  fontWeight: '500',
                  textAlign: 'center'
                }}>{error}</div>
              )}

              <form onSubmit={handleLogin}>
                <div style={{marginBottom: '32px'}}>
                  <label style={{
                    display: 'block',
                    color: '#cbd5e1',
                    marginBottom: '10px',
                    fontSize: '14px',
                    fontWeight: '600',
                    letterSpacing: '0.3px',
                    textAlign: 'center'
                  }}>Access Code</label>
                  <input
                    type="text"
                    value={accessCode}
                    onChange={handleCodeChange}
                    placeholder="BETA-XXXX-XXXX"
                    required
                    style={{
                      width: '100%',
                      padding: '18px 24px',
                      background: 'rgba(15, 23, 42, 0.6)',
                      border: '2px solid rgba(16, 185, 129, 0.3)',
                      borderRadius: '12px',
                      color: 'white',
                      fontSize: '20px',
                      fontWeight: '600',
                      fontFamily: 'monospace',
                      letterSpacing: '2px',
                      textAlign: 'center',
                      outline: 'none',
                      boxSizing: 'border-box',
                      transition: 'all 0.2s ease'
                    }}
                    onFocus={(e) => e.target.style.borderColor = '#10b981'}
                    onBlur={(e) => e.target.style.borderColor = 'rgba(16, 185, 129, 0.3)'}
                  />
                  <p style={{
                    color: '#64748b',
                    fontSize: '13px',
                    marginTop: '12px',
                    textAlign: 'center'
                  }}>
                    You received this code via LinkedIn or email
                  </p>
                </div>

                <button
                  type="submit"
                  disabled={isLoading || accessCode.length < 12}
                  style={{
                    width: '100%',
                    padding: '16px',
                    background: (isLoading || accessCode.length < 12) 
                      ? '#475569' 
                      : 'linear-gradient(135deg, #10b981 0%, #3b82f6 100%)',
                    border: 'none',
                    borderRadius: '12px',
                    color: 'white',
                    fontSize: '16px',
                    fontWeight: '600',
                    cursor: (isLoading || accessCode.length < 12) ? 'not-allowed' : 'pointer',
                    transition: 'all 0.3s ease',
                    boxShadow: (isLoading || accessCode.length < 12) 
                      ? 'none' 
                      : '0 8px 24px rgba(16, 185, 129, 0.3)',
                    letterSpacing: '0.3px'
                  }}
                >
                  {isLoading ? 'Validating...' : 'Access Beta'}
                </button>
              </form>
            </>
          )}
        </div>

        {/* Info Cards */}
        <div style={{
          display: 'grid',
          gridTemplateColumns: 'repeat(2, 1fr)',
          gap: '16px',
          marginTop: '40px'
        }}>
          <div style={{
            background: 'rgba(30, 41, 59, 0.4)',
            backdropFilter: 'blur(10px)',
            borderRadius: '16px',
            padding: '20px 16px',
            textAlign: 'center',
            border: '1px solid rgba(148, 163, 184, 0.1)'
          }}>
            <p style={{
              color: '#34d399',
              fontSize: '28px',
              fontWeight: '700',
              margin: 0
            }}>20</p>
            <p style={{
              color: '#94a3b8',
              fontSize: '13px',
              margin: '6px 0 0 0',
              fontWeight: '500'
            }}>Days Access</p>
          </div>
          <div style={{
            background: 'rgba(30, 41, 59, 0.4)',
            backdropFilter: 'blur(10px)',
            borderRadius: '16px',
            padding: '20px 16px',
            textAlign: 'center',
            border: '1px solid rgba(148, 163, 184, 0.1)'
          }}>
            <p style={{
              color: '#60a5fa',
              fontSize: '28px',
              fontWeight: '700',
              margin: 0
            }}>âˆž</p>
            <p style={{
              color: '#94a3b8',
              fontSize: '13px',
              margin: '6px 0 0 0',
              fontWeight: '500'
            }}>Unlimited Tests</p>
          </div>
        </div>

        {/* What you can test */}
        <div style={{
          background: 'rgba(30, 41, 59, 0.3)',
          borderRadius: '16px',
          padding: '24px',
          marginTop: '24px',
          border: '1px solid rgba(148, 163, 184, 0.1)'
        }}>
          <h3 style={{
            color: 'white',
            fontSize: '16px',
            fontWeight: '600',
            margin: '0 0 16px 0',
            textAlign: 'center'
          }}>What You Can Test</h3>
          <div style={{
            display: 'grid',
            gridTemplateColumns: 'repeat(2, 1fr)',
            gap: '12px'
          }}>
            {[
              { icon: 'ðŸŽ¬', label: 'Video Deepfake Detection' },
              { icon: 'ðŸ“„', label: 'Document Fraud Detection' },
              { icon: 'ðŸ‘¤', label: 'Face Matching' },
              { icon: 'ðŸ”', label: 'Unified KYC Check' }
            ].map((item, i) => (
              <div key={i} style={{
                display: 'flex',
                alignItems: 'center',
                gap: '10px',
                padding: '10px 12px',
                background: 'rgba(15, 23, 42, 0.4)',
                borderRadius: '10px'
              }}>
                <span style={{fontSize: '18px'}}>{item.icon}</span>
                <span style={{color: '#cbd5e1', fontSize: '13px', fontWeight: '500'}}>{item.label}</span>
              </div>
            ))}
          </div>
        </div>

        {/* Footer */}
        <p style={{
          textAlign: 'center',
          color: '#64748b',
          fontSize: '13px',
          marginTop: '40px',
          fontWeight: '500'
        }}>
          Â© 2025 KYCShield by Facti.ai Â· Early Access Beta Program
        </p>
      </div>
    </div>
  );
}

export default BetaLoginPage;
